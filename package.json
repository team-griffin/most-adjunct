{
  "name": "most-adjunct",
  "version": "0.8.0",
  "main": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "repository": "git@github.com:team-griffin/most-adjunct.git",
  "author": "Joshua Thornton <joshua.thornton@heg.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm run build",
    "transpile": "babel src -d lib --copy-files",
    "lint": "npm run lint:js && npm run flow",
    "lint:js": "eslint -c ./config/.eslintrc.js 'src/**/*.js'",
    "lint:js:fix": "eslint --fix -c ./config/.eslintrc.js 'src/**/*.js'",
    "flow": "flow check; test $? -eq 0 -o $? -eq 2",
    "build": "npm run transpile",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "postmerge": "yarn"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.1.21",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-ramda": "^1.4.3",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^4.0.2",
    "cross-env": "^5.0.1",
    "dockerscript": "^0.0.6",
    "eslint": "^4.13.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "mocha": "^4.0.1",
    "nyc": "^11.0.2"
  },
  "nyc": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ]
  },
  "dependencies": {
    "@most/create": "^2.0.1",
    "most": "^1.5.1",
    "ramda": "^0.25.0"
  }
}
